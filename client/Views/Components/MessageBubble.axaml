<UserControl 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:client.Converters"
    x:Class="client.Views.Components.MessageBubble">

    <Border
        Background="{Binding BubbleColor}"
        CornerRadius="14"
        Padding="14"
        HorizontalAlignment="{Binding IsIncoming, Converter={StaticResource BoolToAlignmentConverter}}">

        <Border.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Edit"   Click="OnEditClick"   />
                <MenuItem Header="Delete" Click="OnDeleteClick" />
            </ContextMenu>
        </Border.ContextMenu>

        <StackPanel>
            <TextBlock Text="{Binding DisplayText}"
                       Foreground="White"
                       FontSize="16"/>

            <TextBlock Text="{Binding Time}"
                       Foreground="#bbb"
                       HorizontalAlignment="Right"/>
        </StackPanel>

    </Border>

</UserControl>
