<UserControl
    x:Class="client.Views.Components.MessageInput"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Нижня панель вводу -->
	<Border
        Background="#F01D1A1A"
	
		Padding="16,12">

		<Grid ColumnDefinitions="*,Auto"
              VerticalAlignment="Center">

		
			<TextBox x:Name="InputBox"
                     Watermark="Write a message..."
                     Background="#141111"    
			Foreground="White"
			BorderBrush="Transparent"
			BorderThickness="0"     
			CornerRadius="24"
			Padding="16,0"
			Height="44"
			FontSize="14"
			VerticalContentAlignment="Center" />

			<!-- Кнопка відправки (кругла з “стрілкою”) -->
			<Button Grid.Column="1"
                    Width="44"
                    Height="44"
                    Margin="12,0,0,0"
                    Background="#5B2727"
                    BorderBrush="#000000"
                    BorderThickness="1"
                    CornerRadius="22"
                    Foreground="White">
				<TextBlock Text="➤"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
			</Button>

		</Grid>
	</Border>

</UserControl>
