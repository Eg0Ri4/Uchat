<UserControl
    x:Class="client.Views.Components.TopBar"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Верхній бар -->
	<Border
        Background="#B2181717"
        Height="100"
        Padding="16"
        BorderThickness="0,0,0,1"
        BorderBrush="#33000000">

		<Grid ColumnDefinitions="Auto,*,Auto"
              VerticalAlignment="Stretch">

			<!-- Ліва частина: Username + online -->
			<StackPanel Grid.Column="0"
                        Orientation="Vertical"
                        VerticalAlignment="Top">

				<!-- Username: Inter 25px, 600 -->
				<TextBlock Text="Username"
                           Foreground="White"
                           FontFamily="Inter"
                           FontSize="25"
                           FontWeight="SemiBold"
                           Margin="0,0,0,4" />

				<!-- online: сірий, Inter 20px, 300 -->
				<TextBlock Text="online"
                           Foreground="#9E9E9E"
                           FontFamily="Inter"
                           FontSize="20"
                           FontWeight="Light" />
			</StackPanel>

			<!-- Права частина: іконка пошуку + меню -->
			<StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Spacing="16">

				<!-- Кнопка пошуку з картинкою -->
				<Button Background="Transparent"
                        BorderThickness="0"
                        Padding="4">
					<Image Source="/Assets/search-icon.png"
                           Width="20"
                           Height="20" />
				</Button>

				<!-- Кнопка меню (три крапки) -->
				<Button Background="Transparent"
                        BorderThickness="0"
                        Padding="4">
					<TextBlock Text="⋮"
                               FontSize="20"
                               Foreground="White" />
				</Button>
			</StackPanel>

		</Grid>
	</Border>

</UserControl>
